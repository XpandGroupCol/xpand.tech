---
import clsx from "clsx";

const { as, variant = "primary", className = "" } = Astro.props;
const As = as ?? "h3";
---

<As
    class={clsx(
        "font-hanken font-bold text-[30px] leading-[35px] sm:text-[45px] sm:leading-[51px] md:text-[55px] md:leading-[62px]  xl:text-[60px] xl:leading-[70px]",
        className,
        {
            "text-primary": variant === "primary",
            "text-xp-white": variant === "white",
        },
    )}
>
    <slot />
</As>
