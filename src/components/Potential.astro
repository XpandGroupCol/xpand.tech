---
import ButtonForm from "./react/buttonForm";
import Title from "./title.astro";
---

<section id="potential">
    <div
        class="max-w-[1300px] m-auto py-[50px] px-8 md:py-[130px] lg:pt-[250px] md:px-[68px] flex flex-col items-center"
    >
        <div
            class="relative flex items-center justify-center flex-col font-ibm text-[20px]"
        >
            <span class="undertake">Emprende un viaje</span>

            <picture class="inline-block my-7">
                <source media="(max-width: 767px)" srcSet="/spiral-m.svg" />
                <img src="/spiral.svg" />
            </picture>
            <span class="innovation">de innovación y crecimiento</span>
        </div>
        <Title className="mb-12 md:text-center">
            Libera el potencial de tu negocio con nuestra experiencia en
            tecnología
        </Title>
        <p
            class="text-[30px] leading-[36px] font-hanken mb-16 text-xp-base md:text-center max-w-4xl m-auto"
        >
            <strong>En Xpand Group,</strong> fusionamos creatividad, tecnología y
            estrategia para forjar experiencias digitales sin presentes.
        </p>
        <ButtonForm
            client:visible
            label="Transforma tu empresa con nosotros > "
        >
            Transforma tu empresa con nosotros &gt;
        </ButtonForm>
    </div>
</section>
<style>
    .innovation,
    .undertake {
        position: absolute;
    }
    .undertake {
        left: -210px;
        top: 40px;
    }

    .innovation {
        right: -330px;
        top: 170px;
    }

    @media screen and (max-width: 1440px) {
        .undertake {
            left: -110px;
            top: 10px;
        }

        .innovation {
            right: -160px;
            top: 140px;
        }
    }

    @media screen and (max-width: 1230px) {
        .undertake {
            left: -30px;
        }

        .innovation {
            right: -50px;
            top: 115px;
            width: 180px;
        }
    }

    @media screen and (max-width: 900px) {
        .innovation {
            right: -30px;
            top: 90px;
        }
    }

    @media screen and (max-width: 767px) {
        .innovation,
        .undertake {
            position: relative;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            width: 100%;
            text-align: center;
        }

        .innovation {
            margin-bottom: 30px;
        }
    }
</style>
